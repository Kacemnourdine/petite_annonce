{% extends 'base-pdf.html.twig' %}

{% block title %} liste de donnee de : {{ app.user.name }} {{ app.user.firstname }} {% endblock %}

{% block body %}

<h1> liste de donnee de : {{ app.user.firstname }} {{ app.user.firstname }} </h1>
<h2> vos donnees</h2>
 <table border="1">
     <thead>
         <tr>
             <td>NOM </td>
             <td>PRENOM</td>
             <td>E-MAIL</td>
         </tr>
     </thead>
     <tbody>
         <tr>
             <td>{{ app.user.name }}</td>
             <td>{{ app.user.firstname }}</td>
             <td>{{ app.user.email }}</td>
         </tr>
     </tbody>
 </table> 
 <h2> vos annonces :</h2>
 <table border="1">

     <thead>
         <tr>
             <td>TITRE </td>
             <td>CONTENU</td>
         </tr>
     </thead>
     {% for annonce in app.user.annonces %}
     <tbody>
         <tr>
             <td>{{ annonce.title }}</td>
             <td>{{ annonce.content }}</td>
         </tr>
     </tbody>
     {% endfor %}
 </table>  
 <h2> vos images :</h2>
{{ absolute_url( asset('uploads/images/annonces/1.jpg') | imagine_filter('square') )}}
{% endblock %}